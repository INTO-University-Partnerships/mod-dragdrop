<div class="modal-header">
    <h3 class="modal-title">
        {{ trans('submit_attempt', plugin) }}
    </h3>
</div>
<div class="modal-body">
    <div class="modal-dragdrop-submission">
        {{ trans('submission_confirm', plugin) }}
        <span class="modal-submission-sentence">{% verbatim %}{{ sentence }}{% endverbatim %}</span>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-default" ng-click="cancel()">Cancel</button>
    <button class="btn btn-primary" ng-click="submit()">Submit</button>
</div>