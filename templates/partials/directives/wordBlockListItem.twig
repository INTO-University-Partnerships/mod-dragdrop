<td class="wordblock">
    <span ng-show="editing">
        <input type="text" class="word-block" ng-trim ng-model="block.wordblock"
               ng-blur="disableEditing()" select-on-focus/>
    </span>
    <span ng-hide="editing">{% verbatim %}{{ block.wordblock }}{% endverbatim %}</span>
    <span ng-hide="editing">
        <a href="javascript:;" ng-click="enableEditing()">{{ pix_icon('t/editstring', trans('edit'))|raw }}</a>
    </span>
    <span ng-hide="editing">
        <a href="javascript:;"
           ng-click="deleteBlock({id: block.id})">{{ pix_icon('t/delete', trans('delete'))|raw }}</a>
    </span>
</td>
<td class="tags">
    <tag-select tags="tags"
                tag-id="block.tagid"
                save-tag="saveTag(tag)"
                stop-auto-refresh="stopAutoRefresh()"
                start-auto-refresh="startAutoRefresh()">
    </tag-select>
</td>
