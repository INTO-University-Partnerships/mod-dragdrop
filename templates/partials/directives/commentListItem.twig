<span ng-hide="editing || !manage">
    <a href="javascript:;" ng-click="enableEditing()">{{ pix_icon('t/editstring', trans('edit'))|raw }}</a>
</span>
<span ng-hide="editing || !manage">
    <a href="javascript:;" ng-click="deleteComment(comment.id)">{{ pix_icon('t/delete', trans('delete'))|raw }}</a>
</span>
<span class="dragdrop-comment-author">
    {% verbatim %}{{ comment.author_string }}{% endverbatim %}
</span>
<span ng-show="editing">
    <textarea cols="65" rows="6"
              ng-trim ng-model="comment.comment"
              class="ng-valid ng-dirty dragdrop-comment-textarea"
              select-on-focus>
    </textarea>
    <button class="btn btn-default" ng-click="disableEditing()">{{ trans('save', plugin) }}</button>
</span>
<span ng-hide="editing" class="dragdrop-comment-text">
    {% verbatim %}{{ comment.comment }}{% endverbatim %}
</span>