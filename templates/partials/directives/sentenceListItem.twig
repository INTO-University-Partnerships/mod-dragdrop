<td class="sentence">
    <span ng-show="editing"><input type="text" ng-trim ng-model="sentence.sentence"/></span>
    <span ng-hide="editing">{% verbatim %}{{ sentence.string }}{% endverbatim %}</span>
    <span ng-hide="editing"><a href="javascript:;"
                               ng-href="#/words/sentence/{% verbatim %}{{ sentence.id }}{% endverbatim %}">{{ pix_icon('t/editstring', trans('edit'))|raw }}</a></span>
    <span ng-hide="editing"><a href="javascript:;"
                               ng-click="deleteSentence({id: sentence.id})">{{ pix_icon('t/delete', trans('delete'))|raw }}</a></span>
</td>
